    font-size: 1.2rem;
    color: #888;
}

/* Result list */
.sl-results-count {
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 0.5rem;
}

/* Featured item styling */
.sl-result-item.featured {
    background-color: #f8f9fa;
    border-left: 4px solid #4a90e2;
    padding-left: 1rem;
    margin-bottom: 1.5rem;
    position: relative;
}



/* Tags */
.sl-tags {
